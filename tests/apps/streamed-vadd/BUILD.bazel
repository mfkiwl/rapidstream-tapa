load("//bazel:tapa_rules.bzl", "tapa_xo")

sh_test(
    name = "vadd",
    size = "small",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location vadd-host)"],
    data = [":vadd-host"],
)

sh_test(
    name = "vadd-xosim",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location vadd-host)",
        "--bitstream=$(location vadd-xo)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
        "10",
    ],
    data = [
        ":vadd-host",
        ":vadd-xo",
        "//tapa/cosim:tapa-fast-cosim",
    ],
)

cc_binary(
    name = "vadd-host",
    srcs = glob([
        "*.cpp",
        "*.h",
    ]),
    deps = [
        "//tapa-lib:tapa",
        "//tapa-lib/tapa/host/dpi:mmap_queue",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "vadd-xo",
    src = "vadd.cpp",
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "VecAdd",
)
