load("@rules_cc//cc:defs.bzl", "cc_binary")
load("@rules_shell//shell:sh_test.bzl", "sh_test")
load("//bazel:tapa_rules.bzl", "tapa_xo")

sh_test(
    name = "cannon",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location cannon-host)"],
    data = [":cannon-host"],
    env = {"TAPA_CONCURRENCY": "2"},
    tags = ["cpu:2"],
)

sh_test(
    name = "cannon-xosim",
    size = "enormous",
    timeout = "long",  # 85s without contention
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location cannon-host)",
        "--proc_elem_bitstream=$(location proc-elem)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
    ],
    data = [
        ":cannon-host",
        ":proc-elem",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    env = {"TAPA_CONCURRENCY": "2"},
    tags = ["cpu:6"],
)

cc_binary(
    name = "cannon-host",
    srcs = [
        "cannon.cpp",
        "cannon.h",
        "//tests/apps/cannon:cannon-host.cpp",
    ],
    defines = ["TAPA_CANNON_P=2"],
    includes = ["."],
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "proc-elem",
    src = "cannon.cpp",
    hdrs = ["cannon.h"],
    include = ["."],
    cflags = "-DTAPA_CANNON_P=2",
    top_name = "ProcElem",
    vitis_mode = False,
)

sh_test(
    name = "cannon-4x4",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location cannon-host)"],
    data = [":cannon-host"],
    env = {"TAPA_CONCURRENCY": "1"},
)

sh_test(
    name = "cannon-xosim-4x4",
    size = "enormous",
    timeout = "long",  # 125s without contention
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location cannon-host-4x4)",
        "--proc_elem_bitstream=$(location proc-elem-4x4)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
    ],
    data = [
        ":cannon-host-4x4",
        ":proc-elem-4x4",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    env = {"TAPA_CONCURRENCY": "1"},
    tags = ["cpu:17"],
)

cc_binary(
    name = "cannon-host-4x4",
    srcs = [
        "cannon.cpp",
        "cannon.h",
        "//tests/apps/cannon:cannon-host.cpp",
    ],
    defines = ["TAPA_CANNON_P=4"],
    includes = ["."],
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "proc-elem-4x4",
    src = "cannon.cpp",
    hdrs = ["cannon.h"],
    include = ["."],
    cflags = "-DTAPA_CANNON_P=4",
    top_name = "ProcElem",
    vitis_mode = False,
)
