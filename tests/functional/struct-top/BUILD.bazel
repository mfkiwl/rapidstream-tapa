load("@rules_cc//cc:defs.bzl", "cc_binary")
load("@rules_shell//shell:sh_test.bzl", "sh_test")
load("//bazel:tapa_rules.bzl", "tapa_xo")

sh_test(
    name = "struct-top",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location struct-top-host)"],
    data = [":struct-top-host"],
    env = {"TAPA_CONCURRENCY": "1"},
)

sh_test(
    name = "struct-top-xosim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location struct-top-host)",
        "--bitstream=$(location struct-top-xo)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
    ],
    data = [
        ":struct-top-host",
        ":struct-top-xo",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    tags = [
        "cpu:3",
    ],
)

sh_test(
    name = "struct-top-hls-zipsim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location struct-top-host)",
        "--bitstream=$(location struct-top-hls-zip)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
    ],
    data = [
        ":struct-top-hls-zip",
        ":struct-top-host",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    tags = [
        "cpu:3",
    ],
)

tapa_xo(
    name = "struct-top-xo",
    src = "vadd.cpp",
    hdrs = glob([
        "*.h",
    ]),
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "VecAdd",
)

cc_binary(
    name = "struct-top-host",
    srcs = glob([
        "*.h",
        "*.cpp",
    ]),
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "struct-top-hls-zip",
    src = "vadd.cpp",
    hdrs = glob([
        "*.h",
    ]),
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "VecAdd",
    vitis_mode = False,
)
